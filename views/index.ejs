            socket.on('delete game response', function(data) {
                if (data.success) {
                    if (currentGameId === data.game_id) {
                        currentGameId = null;
                        gameData = null;
                        window.processingChoice = false; // 처리 상태 초기화
                        $('#chatbox').empty();
                        $('#assistant-select').prop('disabled', false);
                    }
                    alert('게임이 삭제되었습니다.');
                    loadGamesList();
                    
                    // 모든 버튼 활성화
                    setAllButtonsState(false);
                } else {
                    alert('게임 삭제 중 오류: ' + data.error);
                    
                    // 모든 버튼 활성화
                    setAllButtonsState(false);
                }
            });
        
            // 초기 게임 목록 로드
            loadGamesList();
            
            // 로그아웃 처리
            $('#logout-button').on('click', function(e) {
                e.preventDefault();
                
                // 액션이 진행 중인 경우 로그아웃 불가
                if (window.actionInProgress) {
                    alert('현재 진행 중인 작업이 있습니다. 완료 후 다시 시도해주세요.');
                    return;
                }
                
                if (confirm('정말 로그아웃 하시겠습니까?')) {
                    window.location.href = '/auth/logout';
                }
            });
        });
    </script>
